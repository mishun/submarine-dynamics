<Border x:Class="SubDyn.App.Controls.TopViewContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:presentation="clr-namespace:SubDyn.Presentation.Controls;assembly=SubDyn.Presentation"
             Background="White"
             Padding="5,5,5,5">

    <Border.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FFBCBEC0"/>
    </Border.Effect>

    <presentation:TopView Background="White" x:Name="topView" />
</Border>
